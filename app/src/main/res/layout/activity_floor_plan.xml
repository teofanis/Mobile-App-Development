<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FloorPlan">
<RelativeLayout
    android:id="@+id/headerRelative"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <TextView
        android:id="@+id/headerLayoutBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#105711">
    </TextView>

    <Spinner
        android:id="@+id/floorplanSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>

    <TextView
        android:id="@+id/OptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a room"
        android:layout_below="@id/headerRelative"
        android:layout_toLeftOf="@id/RoomsSpinner"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/RoomsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerRelative"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RoomsSpinner"
        android:background="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/floorDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalLine"
        android:layout_centerInParent="true"
        android:textStyle="italic"
        android:text="@string/PlaceHolder"
        android:textColor="@color/gray"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/ImgFloorPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/floorDescription"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>