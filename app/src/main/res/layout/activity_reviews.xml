<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/reviewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/placeholderEdition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/bookTitle"
                android:layout_toRightOf="@id/bookIcon"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:background="@color/colorAqua"
                android:text="User :"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/userReviewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/placeholderEdition"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="1dp"
                android:text="@string/PlaceHolder"
                android:textColor="@color/white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"
                />
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/userReviewId"
                />


            <TextView
                android:id="@+id/reviewTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userReviewId"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/bookIcon"
                android:text="Reviewed :"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <LinearLayout
                android:id="@+id/buttonholder"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/reviewTag"
                android:layout_marginTop="15dp"
                android:weightSum="100"
                android:layout_marginLeft="10dp">
          <ImageButton
              android:id="@+id/likeButton"
              android:background="@color/white"
              android:layout_below="@id/reviewTag"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="50"
              android:src="@drawable/ic_thumb_up_black_24dp"
              />
            <TextView
                android:id="@+id/likeCount"
                android:layout_width="match_parent"
                 android:layout_height="match_parent"
                android:layout_below="@id/reviewTag"
                android:layout_toRightOf="@+id/likeButton"
                android:layout_weight="50"
                android:text="0"
                android:gravity="center"
                android:textStyle="bold"
                 />
            </LinearLayout>

            <TextView
                android:id="@+id/reviewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userReviewId"
                android:layout_toRightOf="@id/reviewTag"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:text="@string/twoHundred"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>