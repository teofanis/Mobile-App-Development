<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/bookingIcon"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/bookingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/bookingIcon"
                android:text="Clean Code"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/placeHolderBookedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/bookingTitle"
                android:layout_toRightOf="@id/bookingIcon"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:background="@color/colorAqua"
                android:text="Booked on :"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bookedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookingTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/placeHolderBookedOn"
                android:text="1"
                android:textStyle="bold|italic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/placeHolderAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeHolderBookedOn"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/bookingIcon"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="1dp"
                android:text="Author :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/bookingAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookedOn"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/placeHolderAuthor"
                android:text="Programming"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/placeholderISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeHolderAuthor"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/bookingIcon"
                android:text="ISBN :"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/bookingISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookingAuthor"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/placeholderISBN"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:text="978-1-60309-051-3"

                android:textStyle="bold|italic"
                />

            <Button
                android:id="@+id/cancelBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:layout_centerInParent="true"
                android:layout_below="@+id/bookingISBN"
                android:layout_toRightOf="@id/bookingISBN"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>